{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "HTTP_CLEAR_ORG_REPO": {
                "inputs": {
                    "authentication": {
                        "identity": "@concat('/subscriptions/59d64684-e7c9-4397-8982-6b775a473b74/resourcegroups/OpenTech_GitHub_Mgmt/providers/Microsoft.ManagedIdentity/userAssignedIdentities/', parameters('ManagedIdentityName'))",
                        "type": "ManagedServiceIdentity"
                    },
                    "method": "GET",
                    "uri": "@concat(parameters('GHMgmDomain'), '/utility/clear-org-repos')"
                },
                "runAfter": {
                    "DELAY_AFTER_OWNER_CLEANUP": [
                        "SUCCEEDED"
                    ]
                },
                "type": "Http"
            },
            "HTTP_INDEX_ORG_REPO": {
                "inputs": {
                    "authentication": {
                        "identity": "@concat('/subscriptions/59d64684-e7c9-4397-8982-6b775a473b74/resourcegroups/OpenTech_GitHub_Mgmt/providers/Microsoft.ManagedIdentity/userAssignedIdentities/', parameters('ManagedIdentityName'))",
                        "type": "ManagedServiceIdentity"
                    },
                    "method": "GET",
                    "uri": "@concat(parameters('GHMgmDomain'), '/utility/index-org-repos')"
                },
                "runAfter": {},
                "trackedProperties": {},
                "type": "Http"
            },
            "HTTP__OWNER_CLEANUP": {
                "inputs": {
                    "authentication": {
                        "identity": "@concat('/subscriptions/59d64684-e7c9-4397-8982-6b775a473b74/resourcegroups/OpenTech_GitHub_Mgmt/providers/Microsoft.ManagedIdentity/userAssignedIdentities/', parameters('ManagedIdentityName'))",
                        "type": "ManagedServiceIdentity"
                    },
                    "method": "GET",
                    "uri": "@concat(parameters('GHMgmDomain'), '/utility/repo-owner-cleanup')"
                },
                "runAfter": {
                    "DELAY_AFTER_INDEX_ORG_REPO": [
                        "Succeeded"
                    ]
                },
                "type": "Http"
            },
            "DELAY_AFTER_OWNER_CLEANUP": {
                "inputs": {
                    "interval": {
                        "count": 1,
                        "unit": "Hour"
                    }
                },
                "runAfter": {
                    "HTTP__OWNER_CLEANUP": [
                        "Succeeded"
                    ]
                },
                "type": "Wait"
            },
            "DELAY_AFTER_INDEX_ORG_REPO": {
                "inputs": {
                    "interval": {
                        "count": 1,
                        "unit": "Hour"
                    }
                },
                "runAfter": {
                    "HTTP_INDEX_ORG_REPO": [
                        "Succeeded"
                    ]
                },
                "type": "Wait"
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {},
        "triggers": {
            "Recurrence": {
                "recurrence": {
                    "frequency": "Week",
                    "interval": 1,
                    "schedule": {
                        "weekDays": [
                            "Sunday"
                        ],
                        "hours": [
                            "6"
                        ]
                    }
                },
                "type": "Recurrence"
            }
        }
    },
    "kind": "Stateful"
}